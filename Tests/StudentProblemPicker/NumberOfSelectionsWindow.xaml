<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="StudentProblemPicker.NumberOfSelectionsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="StudentProblemPicker"
	Height="200"
	Width="300"
	ResizeMode="CanMinimize"
	Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="1*" />
			<ColumnDefinition
				Width="1*" />
		</Grid.ColumnDefinitions>
		<Label
			Content="Number of selections:"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Grid.Row="0"
			Grid.Column="0" />
		<xctk:IntegerUpDown
			x:Name="numSelections"
			Value="0"
			Minimum="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Center"
			Grid.Row="0"
			Grid.Column="1" />
		<Button
			x:Name="Select"
			Content="Select randomly"
			Grid.Row="1"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Center"
			Margin="5,5,5,5"
			Click="Select_Click" />
	</Grid>
</Window>