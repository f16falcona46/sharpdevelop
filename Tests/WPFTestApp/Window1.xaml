<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="WPFTestApp.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="WPFTestApp"
	Height="300"
	Width="300"
	MinHeight="200"
	MinWidth="300"
	RenderTransformOrigin="0.5,0.5"
	Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
	<Grid
		Background="{x:Null}">
		<Button
			Width="75"
			Height="23"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			BorderThickness="1,1,1,1"
			Margin="0,0,5,5"
			Content="Increment"
			x:Name="Increment"
			Click="Increment_Click"
			Padding="1,1,1,1"
			Grid.Row="1"
			Grid.Column="2" />
		<Button
			Width="75"
			Height="23"
			BorderThickness="1,1,1,1"
			Content="Reset"
			x:Name="ResetCount"
			Padding="1,1,1,1"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Margin="0,0,88,5"
			Click="ResetCount_Click" />
		<Label
			x:Name="Counter"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="5,5,0,0"
			Grid.RowSpan="1"
			Grid.ColumnSpan="3" />
	</Grid>
</Window>